.apple {
    width: 100%;
    height: 550rpx;
    position: fixed;
    overflow: hidden;
}

ec-canvas {
    width: 700rpx;
    height: 550rpx;
    position: absolute;
    left: 50%;
    top: 50rpx;
    margin-left: -350rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -60rpx;
    margin-top: -33rpx;
    border: 2rpx solid #fff;
    z-index: 9999999999999999999999;
    overflow: hidden;
}

.notice {
    padding: 600rpx 0 100rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}

.notice view:nth-child(1) {
    font-size: 26rpx;
    margin-bottom: 10rpx;
}

.shareAsave {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    font-size: 32rpx;
    color: #fff;
    padding: 56rpx 3%;
    width: 94%;
}

.btn {
    width: 60%;
    font-size: 40rpx;
    border-radius: 20rpx;
    margin: 0 auto;
    color: #060352;
}

.share image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.share {
    background: #ED8733;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
    font-size: 30rpx;
    width: 36%;
    color: #fff;
}

button {
    padding: 0;
    margin: 0;
    box-sizing: content-box;
}