.apple {
    width: 92%;
    margin: 5% 4% 0;
    height: 90%;
    border-radius: 20rpx;
}

ec-canvas {
    width: 700rpx;
    height: 50%!important;
    position: absolute;
    left: 50%;
    margin-left: -350rpx;
}

.share {
    width: 60rpx;
    height: 60rpx;
    padding: 0;
    margin: 0;
    line-height: 60rpx;
    background: none;
}

.top {
    width: 94%;
    padding: 20rpx 3%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.top image {
    width: 60rpx;
    height: 60rpx;
}

.avatar {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    margin-top: -40rpx;
}

.avatar image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
}

.level {
    width: 90%;
    padding: 20rpx 5%;
    font-size: 36rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #fff;
}

.progress {
    background: #fff;
    border-radius: 10rpx;
    padding: 2rpx;
    height: 18rpx;
    width: 180rpx;
    margin-left: 10rpx;
}

.active {
    background: #46138a;
    height: 18rpx;
    border-radius: 9rpx;
}

.mydetail {
    width: 70%;
    margin: 20rpx 15%;
    padding: 10rpx 20rpx;
    font-size: 22rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-radius: 50rpx;
    background: #622AB3;
}

.left {
    width: 50%;
}

.left text {
    color: #8D4EF0;
}

.left:nth-child(2) {
    margin-left: 50rpx;
}

.footer {
    width: 100%;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    padding: 30rpx 0;
}