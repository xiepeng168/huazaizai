.apple {
    height: 92%;
    padding-top: 8%;
}

.goodsList {
    height: 68%;
    width: 84%;
    margin: 0 5% 0;
    padding: 20rpx 3%;
    border-radius: 10rpx;
    background: #fff;
    z-index: 999;
    display: inline-block;
}

.ad {
    width: 100%;
}

.goods {
    width: 100%;
    padding: 20rpx 0 10rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.goodsdetail {
    width: 23.3%;
    padding: 0 5%;
    margin: 0 0 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin-bottom: 60rpx;
}

.goodsPic {
    width: 80%;
    margin: 10rpx 0;
    display: block;
    border-radius: 50%;
    border: 6rpx solid #fff;
    background: #fff;
}

.goodsname {
    width: 100%;
    background: #622ab3;
    border-radius: 50rpx;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
}

.price {
    color: #622bb4;
    font-size: 26rpx;
}

.footer {
    width: 100%;
    height: 32%;
    margin-top: -5%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.share {
    width: 50%;
    margin-bottom: 20rpx;
}

.notice {
    margin-top: 50rpx;
    margin-bottom: 50rpx;
    color: #7743c8;
    font-size: 38rpx;
    font-weight: bolder;
    width: 100%;
    text-align: center;
}

.cover {
    width: 92%;
    padding: 0 4%;
    display: block;
    z-index: -10;
    margin-bottom: -15rpx;
}

.Tcover {
    width: 92%;
    padding: 0 4%;
    z-index: 12;
    display: block;
    margin-top: -15rpx;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.8;
    overflow: hidden;
    color: #fff;
}

.drawer_attr_box {
    width: 70%;
    height: 56%;
    position: fixed;
    top: 50%;
    margin-top: -50%;
    left: 50%;
    margin-left: -35%;
}

.getM {
    width: 100%;
    position: absolute;
    height: 100%;
    background: #fff;
    border-radius: 20rpx;
    margin: 0;
}

.getPic {
    width: 130rpx;
    height: 130rpx;
    margin: -65rpx auto 0;
    display: block;
    border-radius: 50%;
    border: 6rpx solid #fff;
    background: #fff;
}

.mianpic {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.mianpics {
    position: relative;
}

.effectpic {
    width: 130rpx;
    height: 40rpx;
    position: absolute;
    display: block;
    bottom: 0;
}

.effect {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    position: absolute;
    bottom: 0;
    color: #fff;
    text-align: center;
}

.usenum {
    height: 30rpx;
    line-height: 30rpx;
    padding: 0rpx 10rpx;
    position: absolute;
    top: 15%;
    right: -20%;
    background: #7743c8;
    font-size: 24rpx;
    color: #fff;
    border-radius: 20rpx;
}

.close {
    position: absolute;
    top: 16rpx;
    right: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.expername {
    background: #7743c9;
    color: #fff;
    width: 100%;
    text-align: center;
    margin-top: 30rpx;
    font-size: 40rpx;
    padding: 20rpx 0;
}

.expermain {
    font-size: 32rpx;
    color: #4a4a4a;
    font-weight: bolder;
    width: 80%;
    margin: 100rpx auto;
}

.surplus {
    font-size: 22rpx;
    color: #7743c8;
    text-align: center;
    margin: 20rpx 0;
}

.usebtn {
    font-size: 50rpx;
    background: #09BB07;
    color: #fff;
    width: 60%;
    border-radius: 14rpx;
    text-align: center;
    padding: 14rpx 0;
    margin: 0 auto;
}

.bottom {
    width: 100%;
    position: absolute;
    bottom: 40rpx;
}

.mianpic1 {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.effectpic1 {
    width: 90rpx;
}