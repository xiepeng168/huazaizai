.page {
    position: relative;
    height: 100%;
}

.apple {
    width: 70%;
    padding: 0 15%;
    height: 10%;
    color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    text-align: center;
    margin-bottom: 10rpx;
}

.line {
    height: 50%;
    margin-top: 10%;
    border-right: 2rpx solid #fff;
    opacity: 0.6;
}

.title {
    width: 30%;
    padding: 60rpx 0 0;
    font-size: 36rpx;
    opacity: 0.6;
}

.seltitle {
    width: 30%;
    padding: 60rpx 0 0;
    font-size: 36rpx;
    border-bottom: 4rpx solid #fff;
}

.main {
    width: 90%;
    height: 90%;
    padding: 0rpx 5%;
}

.cover {
    width: 100%;
    position: relative;
}

.scroll {
    position: relative;
    top: -24rpx;
    width: 98%;
    padding: 0 1%;
}

.rankings {
    width: 100%;
    height: 200rpx;
    color: #fff;
    background: #9554fa;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
    position: relative;
}

.triangle {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.num {
    position: absolute;
    top: 16rpx;
    left: 16rpx;
}

.containpic {
    width: 130rpx;
    height: 130rpx;
    margin-left: 8%;
    z-index: 9999999;
    border-radius: 50%;
}

.avatar {
    width: 130rpx;
    height: 130rpx;
    border: 2rpx solid #fff;
    border-radius: 50%;
}

.name {
    max-width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.form {
    font-size: 22rpx;
}

.detail {
    width: 80%;
}

.start {
    width: 30rpx;
    height: 30rpx;
    margin-right: 6rpx;
}

.top,.bottom {
    display: flex;
    height: 90rpx;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 3%;
}

.top {
    border-bottom-width: 4rpx;
    border-bottom-style: solid;
    border-bottom-color: rgba(225,255,255,0.2);
}

.starts {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 120rpx;
    background: #773bcf;
    border-radius: 50rpx;
    padding: 6rpx 10rpx;
}

.dan {
    background: #b589fc;
    border-radius: 50rpx;
    width: 120rpx;
    margin-left: -20%;
    padding: 6rpx 30rpx;
    padding-left: 20%;
    z-index: 10;
}

.footer {
    color: #fff;
    text-align: center;
    width: 100%;
    font-size: 22rpx;
}

.lookdan {
    width: 60%;
    height: 120rpx;
    position: relative;
}

.look {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}