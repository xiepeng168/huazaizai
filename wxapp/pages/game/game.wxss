@import "../../template/redopen/redopen.wxss";

page {
    background: #db5a3a;
}

.game__head {
    width: 100%;
    height: 240rpx;
    font-size: 35rpx;
    color: #fff5b8;
    display: flex;
    justify-content: center;
    align-items: center;
}

.game_cont {
    text-align: center;
}

.game_progress {
    width: 690rpx;
    height: 37rpx;
    border: 2rpx solid #000;
    border-radius: 20rpx;
    background: #000;
    overflow: hidden;
}

.game_progress view {
    width: 100%;
    height: 100%;
    background: url('data:image/png;base64,') 0 0/58rpx 33rpx repeat-x,#ffd302;
}

.gameAnimate {
    animation: widani 10s linear both;
}

@-webkit-keyframes widani {
    0% {
        width: 100%;
    }

    100% {
        width: 0%;
    }
}

@keyframes widani {
    0% {
        width: 100%;
    }

    100% {
        width: 0%;
    }
}

.game__bg {
    background: #ad4032;
    height: 800rpx;
    width: 100%;
    padding-top: 10rpx;
}

.game__con {
    height: 790rpx;
    width: 100%;
    background: #1f1f1f;
    box-sizing: border-box;
    padding: 45rpx 45rpx 25rpx;
}

.game__num {
    color: #FFF;
    font-size: 500rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.game__list {
    width: 100%;
    height: 100%;
    color: white;
}

.game__list .wordlist,.pinyinlist {
    display: flex;
    justify-content: space-around;
    margin: 80rpx 0 100rpx;
}

.game__list .word {
    width: 260rpx;
    height: 260rpx;
    font-size: 125rpx;
    text-align: center;
    line-height: 260rpx;
    background-color: #2f2f2f;
}

.question {
    flex-shrink: 0;
}

.pinyinlist {
    font-size: 60rpx;
}

.pinyin {
    width: 180rpx;
    height: 180rpx;
    text-align: center;
    line-height: 170rpx;
    border: 2rpx solid #ffec92;
    border-radius: 50%;
    background-color: #2f2f2f;
}

.opt {
    background: url('data:image/png;base64,') 10rpx -10rpx/contain no-repeat;
}

.opf {
    background: url('data:image/png;base64,') 10rpx 0/contain no-repeat;
}

.stop {
    position: relative;
    top: -700rpx;
    width: 100%;
    height: 700rpx;
    z-index: 5;
}

.answer_fail view {
    text-align: center;
}

.answer_fail button {
    border-right: 1rpx solid #736d50;
    margin: 100rpx auto 0;
    font-size: 40rpx;
    width: 615rpx;
    height: 125rpx;
    line-height: 125rpx;
    padding: 0;
    color: #ffeb02;
    background-color: #2f2f2f;
    border-radius: 0;
}

.answer_fail button::after {
    border: none;
}

.mes_1 {
    letter-spacing: 10rpx;
    margin: 20rpx auto 50rpx;
    color: #fff5b8;
    font-size: 50rpx;
}

.mes_1 .span {
    color: red;
}

.mes_2,.mes_3 {
    letter-spacing: 10rpx;
    margin: 0 auto;
    color: white;
}

.answer_fail .goindex {
    width: 247rpx;
    margin: 20rpx auto;
    color: white;
    letter-spacing: 3rpx;
}

.yihan {
    width: 690rpx;
    height: 94rpx;
}

.game__head .music {
    width: 46rpx;
    height: 46rpx;
    position: relative;
    top: 70rpx;
    left: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.music_on {
    animation: musicRota 2s linear both infinite;
}

.game__head .music image {
    width: 46rpx;
    height: 46rpx;
}

@-webkit-keyframes musicRota {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes musicRota {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}