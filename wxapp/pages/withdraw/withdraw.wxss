page {
    background: #f1f0f5;
}

page>view {
    background: #f1f0f5;
}

.tixian_box .tixian_top {
    padding: 22rpx 42rpx 0 0;
}

.tixian_box .tixian_top text {
    display: block;
    color: #838383;
    font-size: 26rpx;
    text-align: center;
}

.tixian_box .tixian_top text:nth-of-type(1) {
    margin-left: auto;
    width: 147rpx;
    height: 50rpx;
    border-radius: 500rpx;
    border: 2rpx #666666 solid;
    line-height: 50rpx;
}

.tixian_box .tixian_top text:nth-of-type(3) {
    font-size: 70rpx;
    color: #2a2a2a;
    margin: 28rpx 0 0 0;
}

.tixian_box .tixian_top {
    background: #f1f0f5;
    height: 283rpx;
}

.tixian_bottom view:first-child {
    display: flex;
    align-items: center;
    padding-left: 60rpx;
    background: #fff;
}

.tixian_bottom view input {
    flex: 1;
    display: flex;
    align-items: center;
    height: 105rpx;
    font-size: 45rpx;
    color: #000;
}

.tixian_bottom view image {
    width: 31rpx;
    height: 43rpx;
    margin-right: 10rpx;
}

.tixian_bottom view .qbtx {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 240rpx;
    height: 105rpx;
    color: #1473d5;
    font-size: 32rpx;
}

.tixian_bottom button {
    width: 600rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin: 30rpx auto;
}

.tixian_bottom .tishi_txt {
    height: 230rpx;
    margin: 60rpx 0 0 73rpx;
}

.tixian_bottom .tishi_txt text {
    color: #676767;
    display: block;
    position: none;
    font-size: 26rpx;
    margin-bottom: 20rpx;
}

.chenggong {
    background: rgba(0,0,0,0.61);
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
}

.chenggong .jiemian {
    width: 623rpx;
    padding-bottom: 25rpx;
    padding-top: 25rpx;
    border-radius: 15rpx;
    background: white;
    position: absolute;
    top: 47%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 5;
}

.jiemian__click {
    position: absolute;
    top: -110rpx;
    right: 27rpx;
    animation: click 2s linear infinite;
}

.jiemian__click image {
    width: 84rpx;
    height: 90rpx;
}

.jiemian__tit {
    width: 450rpx;
    height: 93rpx;
    margin: 0 auto 20rpx;
}

.jiemian__tit image {
    width: 450rpx;
    height: 93rpx;
}

.jiemian__code {
    display: flex;
    justify-content: center;
    font-size: 38rpx;
    color: #838383;
    background: #f1f0f5;
    border: 3rpx #d4d4d9 solid;
    width: 547rpx;
    height: 68rpx;
    border-radius: 500rpx;
    line-height: 68rpx;
    margin: 0 auto;
}

.jiemian__clip {
    font-size: 32rpx;
    background: #57b837;
    color: white;
    width: 232rpx;
    height: 70rpx;
    text-align: center;
    border-radius: 500rpx;
    line-height: 70rpx;
    margin: 35rpx auto 35rpx;
}

.jiemian__cue {
    text-align: center;
    padding: 0 15rpx;
    font-size: 26rpx;
    color: #676767;
}

.jiemian__cue text {
    font-size: 35rpx;
    color: #ff4e00;
}

.jiemian__step {
    display: flex;
    justify-content: center;
    margin-top: 25rpx;
}

.jiemian__step image {
    width: 555rpx;
    height: 396rpx;
}

.chenggong .guanbi {
    width: 82rpx;
    height: 82rpx;
    position: absolute;
    bottom: -120rpx;
    left: 50%;
    transform: translate(-50%,0);
}

@-webkit-keyframes click {
    0% {
        top: -120rpx;
    }

    33% {
        top: -110rpx;
    }

    66% {
        top: -100rpx;
    }

    100% {
        top: -110rpx;
    }
}

@keyframes click {
    0% {
        top: -120rpx;
    }

    33% {
        top: -110rpx;
    }

    66% {
        top: -100rpx;
    }

    100% {
        top: -110rpx;
    }
}

.btnwithdraw {
    background: #db5a3a;
    color: white;
}