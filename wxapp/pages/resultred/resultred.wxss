.resultred {
    padding-top: 500rpx;
    background: #fff;
    box-sizing: border-box;
}

.resultred__head {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 360rpx;
}

.resultred__head image {
    width: 100%;
    height: 360rpx;
}

.resultred__tit {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #d45b4a;
}

.resultred__money {
    display: flex;
    justify-content: center;
    font-size: 80rpx;
    color: #d45b4a;
}

.resultred__cue {
    display: flex;
    justify-content: center;
    font-size: 20rpx;
    color: #465dce;
}

.resultred__btn--again {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 400rpx;
    height: 90rpx;
    margin: 25rpx auto 0;
    border-radius: 45rpx;
    font-size: 35rpx;
    color: #fff;
    background: #d45b4a;
}

.resultred__btn--myprize {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 394rpx;
    height: 84rpx;
    margin: 25rpx auto 0;
    border: 3rpx solid #d45b4a;
    border-radius: 45rpx;
    font-size: 35rpx;
    color: #d45b4a;
}

.resultred__ad {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
}